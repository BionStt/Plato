@model LabelIndexViewModel<Label>

<nav class="navbar navbar-light bg-light justify-content-between">
    
    <form class="form-inline" asp-route-controller="Admin" asp-route-action="Index" method="get" enctype="multipart/form-data">
        <div class="input-group">
            <input class="form-control" name="opts.search" value="@Model.Options.Search" type="search" placeholder="@T["Search labels..."]" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">
                    <i class="fal fa-search"></i>
                </button>
            </div>
        </div>
    </form>
    
    <a asp-rooute-controller="Admin" asp-route-action="Create" class="btn btn-primary ml-sm-2">
        <i class="fal fa-plus"></i>
        @T["Add Label"]
    </a>
    
</nav>