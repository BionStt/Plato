@model Article

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Details"]</h6>
    </card-title>
    <card-body>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @T["Posted"]: <date utc="@Model.CreatedDate"></date>
            </li>
            <li class="list-group-item">
                @T["Latest Reply"]: <date utc="@Model.LastReplyDate"></date>
            </li>
            <li class="list-group-item">
                @Model.TotalViews
                @T[" views"],
                @Model.TotalFollows
                @T["follows"]
            </li>
        </ul>
    </card-body>
</card>

@await DisplayAsync(new View("ArticlePosters", new
{
    id = @Model.Id
}))
