@model EntityIndexViewModel<Article>

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title float-left">
            @T["My Articles"]
        </h6>
        <a class="btn btn-secondary float-right" asp-route-area="Plato.Articles" asp-route-controller="User" asp-route-action="Index" asp-route-id="@ViewContext.RouteData.Values["opts.id"]" asp-route-alias="@ViewContext.RouteData.Values["opts.alias"]">
            @T["All Articles"]
        </a>
    </card-title>
    <card-body>
        <ul class="list-group list-group-hover">
            @await DisplayAsync(new View("GetArticleList", new
            {
                options = @Model.Options,
                pager = @Model.Pager
            }))
        </ul>
</card-body>
</card>

     



