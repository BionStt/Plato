@model ChannelIndexViewModel

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Channels"]</h6>
    </card-title>
    <card-body>
        @if (Model.Channels != null)
        {
            <ul class="list-group list-group-flush list-group-hover">
                @foreach (var channel in Model.Channels)
                {
                    <li class="list-group-item">

                        @if (!String.IsNullOrEmpty(channel.IconCss))
                        {
                            <i class="@channel.IconCss"></i>
                        }

                        <h6 class="d-inline-block">
                            @channel.Name
                        </h6>

                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@channel.Id" class="btn btn-secondary float-right">
                            <i class="fal fa-pencil"></i>
                            @T["Edit"]
                        </a>

                    </li>
                }
            </ul>
        }
        else
        {
            <h6>@T["No channels found"]</h6>
        }
    </card-body>
</card>


