@model ChannelIndexViewModel

@await DisplayAsync(new View("ChannelList", new
{
    viewOpts = @Model.ChannelViewOpts
}))

@if (Model.ChannelViewOpts.ChannelId != 0)
{
    @await DisplayAsync(new View("TopicList", new
    {
        viewOpts = @Model.TopicViewOpts,
        pagerOpts = @Model.PagerOpts
    }))
}

