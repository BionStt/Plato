@model FollowViewModel

<card>
    <card-title>
        @T["Follow"]
    </card-title>
    <card-body>
        
        @if (!Model.IsFollowing)
        {
            <button data-toggle="tooltip" title="@T[Model.FollowType.SubscribeDescription]" class="btn btn-block btn-secondary" data-on-css="btn-danger" data-off-css="btn-secondary" data-provide="follow-button" data-follow-type="@Model.FollowType.Name" data-subscribe-text="@T[Model.FollowType.SubscribeText]" data-subscribe-tooltip="@T[Model.FollowType.SubscribeDescription]" data-unsubscribe-text="@T[Model.FollowType.UnsubscribeText]" data-unsubscribe-tooltip="@T[Model.FollowType.UnsubscribeDescription]" data-action="subscribe" data-thing-id="@Model.ThingId" role="button">
                <i class="fal fa-bell"></i> 
                <span>
                    @T[Model.FollowType.SubscribeText]
                </span>
            </button>
        }
        else
        {
            <button data-toggle="tooltip" title="@T[Model.FollowType.UnsubscribeDescription]" class="btn btn-block btn-danger" data-on-css="btn-danger" data-off-css="btn-secondary" data-provide="follow-button" data-follow-type="@Model.FollowType.Name" data-subscribe-text="@T[Model.FollowType.SubscribeText]" data-subscribe-tooltip="@T[Model.FollowType.SubscribeDescription]" data-unsubscribe-text="@T[Model.FollowType.UnsubscribeText]" data-unsubscribe-tooltip="@T[Model.FollowType.UnsubscribeDescription]" data-action="unsubscribe" data-thing-id="@Model.ThingId" role="button">
                <i class="fal fa-bell-slash"></i> 
                <span>
                    @T[Model.FollowType.UnsubscribeText]
                </span>
            </button>
        }


    </card-body>
</card>



