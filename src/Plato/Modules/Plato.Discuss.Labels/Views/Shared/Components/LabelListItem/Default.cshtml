@model LabelListItemViewModel

<a asp-route-area="Plato.Discuss.Labels" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@Model.Label.Id" asp-route-alias="@Model.Label.Alias" title="@Model.Label.Description" class="list-group-item list-group-item-action col-lg-3 col-md-6 col-sm-12">
    <span class="btn btn-sm font-weight-bold" style="background-color: @Model.Label.BackColor; color: @Model.Label.ForeColor">
        @Model.Label.Name
    </span>
</a>