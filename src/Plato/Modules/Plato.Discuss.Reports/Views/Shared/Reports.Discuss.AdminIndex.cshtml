@model ReportOptions

<div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12">

        @await DisplayAsync(new View("EntityViewsByDateChart", new
        {
            options = @Model,
            chart = new ChartOptions()
            {
                Title = "Topic Views"
            }
        }))

    </div>
    <div class="col-lg-6 col-md-12 col-sm-12">

        @await DisplayAsync(new View("NewByDateChart", new
        {
            options = @Model,
            chart = new ChartOptions()
            {
                Title = "New Topics"
            }
        }))

    </div>
 
</div>

<div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12">

        @await DisplayAsync(new View("EntityViewsTopList", new
        {
            options = @Model,
            chart = new ChartOptions()
            {
                Title = "Top Topics"
            }
        }))

    </div>

    <div class="col-lg-6 col-md-12 col-sm-12">

        @await DisplayAsync(new View("EntityRepliesTopList", new
        {
            options = @Model,
            chart = new ChartOptions()
            {
                Title = "Popular Topics"
            }
        }))

    </div>

</div>

@await DisplayAsync(new View("UserRepTopList", new
{
    options = @Model,
    chart = new ChartOptions()
    {
        Title = "Most Participation"
    }
}))
