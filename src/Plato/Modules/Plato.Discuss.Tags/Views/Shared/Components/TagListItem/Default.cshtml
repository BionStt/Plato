@model TagListItemViewModel

<a asp-route-area="Plato.Discuss.Tags" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@Model.Tag.Id" asp-route-alias="@Model.Tag.Alias" class="list-group-item list-group-item-action border-0 col-lg-4 col-md-6 col-sm-12 p-0">
    <div class="p-3">
        <span class="float-right">
            <span class="btn btn-sm btn-secondary" data-toggle="tooltip" title="@T["Followers"]">
                @Model.Tag.TotalFollows.ToPrettyInt()
            </span>
            <span class="btn btn-sm btn-secondary" data-toggle="tooltip" title="@T["Topics"]">
                @Model.Tag.TotalEntities.ToPrettyInt()
            </span>
        </span>
        <span class="btn btn-sm label font-weight-bold">
            @Model.Tag.Name
        </span>
        <span class="d-block mt-2">
            @if (!String.IsNullOrEmpty(Model.Tag.Description))
            {
                @Model.Tag.Description
            }
            else
            {
                @T["No description provided."]
            }
        </span>
        <span class="text-muted d-block mt-2 pb-0">
            @if (Model.Tag.LastSeenDate != null)
            {
                @T["Last seen: "]
                <date utc="@Model.Tag.LastSeenDate" />
            }
        </span>
    </div>
</a>