@model TagsViewModel

<card>
    <card-title>
        <a data-toggle="tooltip" title="@T["All Tags"]" asp-route-area="Plato.Discuss.Tags" asp-route-controller="Home" asp-route-action="Index" class="float-right text-muted">
            <i class="fal fa-ellipsis-h fa-2x"></i>
        </a>
        <h6 class="card-title">@T["Top Tags"]</h6>
    </card-title>
    <card-body>
        
        @if (Model.Tags != null)
        {
            foreach (var tag in Model.Tags)
            {
                var css = Model.SelectedTagId == tag.Id
                    ? "btn btn-sm btn-primary my-1"
                    : "btn btn-sm btn-secondary my-1";
                <a asp-route-area="Plato.Discuss.Tags" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@tag.Id" asp-route-alias="@tag.Alias" class="@css">
                    @tag.Name
                </a>
            }
        }
        else
        {
            @T["No tags"]
        }

    </card-body>
</card>


