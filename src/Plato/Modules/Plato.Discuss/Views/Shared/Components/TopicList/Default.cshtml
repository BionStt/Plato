@using Plato.Discuss.Models
@model HomeIndexViewModel

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title float-left">@T["Topics"]</h6>
        <ul class="nav nav-h navbar p-0 float-right">
            <li class="nav-item dropdown">
                <a class="nav-link text-muted dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter
                </a>
                <div class="dropdown-arrow"></div>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link text-muted dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort By
                </a>
                <div class="dropdown-arrow"></div>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
        </ul>
    </card-title>
    <card-body>
        @if (Model.Results != null)
        {
            <ul class="list-group list-group-flush list-group-hover">
                @foreach (var entity in Model.Results.Data)
                {
                    <li class="list-group-item pt-4">

                        @{
                            var detail = entity.GetOrCreate<PostDetails>();
                        }

                        <div class="list-left">
                            <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@entity.CreatedUserId" asp-route-alias="@entity.CreatedBy.Alias">
                                <avatar data-toggle="tooltip" title="@entity.CreatedBy.DisplayName" class="avatar" user-id="@entity.CreatedBy.Id" />
                            </a>
                        </div>
                        <div class="list-body">

                            @if (detail != null)
                            {
                                <div title="@T["Replies"]" data-toggle="tooltip" class="float-right text-muted">
                                    <i class="fal fa-comment-alt"></i>
                                    @detail.TotalReplies
                                </div>
                            }

                            <h5>
                                <a asp-route-area="Plato.Discuss" asp-route-controller="Home" asp-route-action="Topic" asp-route-id="@entity.Id" asp-route-alias="@entity.Alias">
                                    @entity.Title
                                </a>
                            </h5>
                            <p class="text-muted">
                                @entity.Abstract
                            </p>
                            <p>
                                @if (detail != null)
                                {
                                    <div class="avatar-group float-right">
                                        @foreach (var participant in detail.Participants)
                                        {
                                            <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@participant.Id" asp-route-alias="@participant.Alias">
                                                <avatar data-toggle="tooltip" title="@participant.DisplayName" class="avatar avatar-sm" user-id="@participant.Id" />
                                            </a>
                                        }
                                    </div>
                                }
                                @T["By"] 
                                <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@entity.CreatedUserId" asp-route-alias="@entity.CreatedBy.Alias">
                                    @entity.CreatedBy.DisplayName
                                </a>, 
                                <date utc="@entity.CreatedDate" itemprop="createdDate" data-toggle="tooltip" />
                            </p>

                        </div>

                    </li>

                }
            </ul>
        }
        else
        {
            <ul class="list-group list-group-flush list-group-hover">
                <li class="list-group-item">
                    <h6>@T["No discussions found"]</h6>
                </li>
            </ul>
        }
    </card-body>
</card>

<div class="mt-4 mb-4">
    <pager model="@Model.PagerOpts"></pager>
</div>
