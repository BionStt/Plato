@model Plato.Entities.Models.FeatureEntityMetrics
@{
    var featureMetrics = Model?.Metrics.Data.FirstOrDefault(m => m.Aggregate.Equals("Plato.Discuss", StringComparison.OrdinalIgnoreCase));

}
<a asp-route-area="Plato.Discuss" asp-route-controller="Home" asp-route-action="Index" class="float-left list-group-item list-group-item-action col-lg-4 col-md-6 col-sm-12 border-0 m-0 p-0 text-center">
    <span class="d-inline-block p-4">
        <span class="d-block">
            <i class="fal fa-comment-alt fa-2x"></i>
        </span>
        <strong>
            @T["Discuss"]
        </strong>
        <span class="d-block text-muted">
            @T["Chat & get help from others within our community."]
        </span>
     
        @if (featureMetrics != null)
        {
            var text = featureMetrics.Count == 1 
                ? "{0} topic" 
                : "{0} topics";
            <span class="d-block">
                <span class="badge badge-primary">
                    @T[text].Value.Replace("{0}", featureMetrics.Count.ToPrettyInt())
                </span>
            </span>
        }
    
    </span>
</a>