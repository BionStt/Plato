@model EditTopicViewModel


<div class="mt-0" id="postReply">

    <div class="topic-reply-left">
        @if (this.CurrentUser != null)
        {
            <a href="#" class="avatar-link">
                <avatar data-toggle="tooltip" title="@this.CurrentUser.DisplayName" class="avatar" user-id="@this.CurrentUser.Id" />
            </a>
        }

    </div>
    <div class="topic-reply-body">
        <card class="card mt-0">
            <card-body>
                
                <div asp-validation-summary="ModelOnly"></div>

                <fieldset>
                    <div class="form-group">

                        <span asp-validation-for="Title" class="text-danger"></span>
                        <input asp-for="Title" placeholder="@T["Title"]" tabindex="1" class="form-control" autofocus />

                    </div>
                    <div class="form-group">
                        
                        @await DisplayAsync(new View("Editor", new
                        {
                            value = @Model.Message,
                            placeHolderText = T["Add your comments here"],
                            htmlName = @Model.EditorHtmlName,
                            tabIndex = 2
                        }))

                    </div>
                </fieldset>

            </card-body>
        </card>
    </div>

</div>