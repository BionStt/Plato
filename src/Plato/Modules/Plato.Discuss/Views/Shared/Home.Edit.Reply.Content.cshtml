@model EditReplyViewModel

<input type="hidden" asp-for="Id"/>
<input type="hidden" asp-for="EntityId" />

<div class="mt-0" id="postReply">

    <div class="topic-reply-left">
        @if (base.CurrentUser != null)
        {
            <a href="#" class="avatar-link">
                <avatar data-toggle="tooltip" title="@base.CurrentUser.DisplayName" class="avatar" user-id="@base.CurrentUser.Id" />
            </a>
        }

    </div>
    <div class="topic-reply-body">
        <card class="card mt-0">
            <card-body>
                
                <div asp-validation-summary="ModelOnly"></div>

                <fieldset>
                    <div class="form-group">
                        
                        @await DisplayAsync(new View("Editor", new
                        {
                            value = @Model.Message,
                            placeHolderText = T["Add your comments here"],
                            htmlName = @Model.EditorHtmlName,
                            tabIndex = 2
                        }))

                    </div>
                </fieldset>

            </card-body>
        </card>
    </div>

</div>