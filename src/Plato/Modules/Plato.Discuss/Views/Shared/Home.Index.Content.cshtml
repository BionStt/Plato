@using Plato.Discuss.Models
@model HomeIndexViewModel

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title float-left">@T["Topics"]</h6>
        <ul class="nav nav-h navbar p-0 float-right">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter
                </a>
                <div class="dropdown-arrow"></div>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort By
                </a>
                <div class="dropdown-arrow"></div>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
        </ul>
    </card-title>
    <card-body>
        @if (Model.Results != null)
        {
            <ul class="list-group list-group-flush list-group-hover">
                @foreach (var entity in Model.Results.Data)
                {
                    <li class="list-group-item pt-4">

                        @{
                            var detail = entity.GetOrCreate<PostDetails>();
                        }
                        
                        <div class="list-left">
                            <a href="#">
                                <avatar data-toggle="tooltip" title="@entity.CreatedBy.DisplayName" class="avatar" user-id="@entity.CreatedBy.Id" />
                            </a>
                        </div>
                        <div class="list-body">
                            
                            @if (detail != null)
                            {
                                <div class="float-right">
                                    @detail.TotalReplies
                                </div>
                            }

                            <h5>
                                <a asp-controller="Home" asp-action="Topic" asp-route-id="@entity.Id">
                                    @entity.Title
                                </a>
                            </h5>
                            <p class="text-muted">
                                @entity.Abstract
                            </p>
                            <p>
                                @if (detail != null)
                                {
                                    <div class="avatar-group float-right">
                                        @foreach (var participant in detail.Participants)
                                        {
                                            <a href="#">
                                                <avatar data-toggle="tooltip" title="@participant.DisplayName" class="avatar avatar-sm" user-id="@participant.Id"/>
                                            </a>
                                        }
                                    </div>
                                }
                                By <a href="#">@entity.CreatedBy.DisplayName</a>, <span title="@entity.CreatedDate">@entity.CreatedDate.ToPrettyDate()</span>
                            </p>


                        </div>
                        
                    </li>

                }
            </ul>
        }
        else
        {
            <h6>@T["No discussions found"]</h6>
        }
    </card-body>
</card>

<div class="mt-4 mb-4">
    <pager model="@Model.PagerOpts"></pager>
</div>
