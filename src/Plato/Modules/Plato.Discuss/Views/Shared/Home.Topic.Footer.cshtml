@model EditReplyViewModel

@{
    var user = await GetAuthenticatedUserAsync();
}

<div id="postReply">
 
    <div class="topic-reply-left">
        @if (user != null)
        {
            <a href="#" class="avatar-link">
                <avatar data-toggle="tooltip" title="@user.DisplayName" class="avatar" user-id="@user.Id" />
            </a>
        }
    </div>
    <div class="topic-reply-body">

        <form asp-controller="Home" asp-action="Topic" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="EntityId"/>

            @await DisplayAsync(new View("Editor", new
            {
                value = string.Empty,
                placeHolderText = T["Post a reply..."],
                htmlName = @Model.EditorHtmlName
            }))

            <card>
                <card-body>
                    
                    <div class="float-right">
                        <a class="btn btn-lg btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
                        <button type="submit" class="btn btn-primary">
                            @T["Post Reply"]
                        </button>
                    </div>
                </card-body>
            </card>

        </form>

    </div>
</div>


