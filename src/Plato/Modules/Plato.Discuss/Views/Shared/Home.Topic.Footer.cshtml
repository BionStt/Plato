@model EditReplyViewModel

<div class="resizable resizable-bottom resizable-hidden transition" data-provide="resizeable">
    <div class="resizable-bar"></div>
  
        <div class="resizable-content">
            <div class="resizable-header">
                <h6 class="d-inline-block">
                    @T["Post a reply"]
                </h6>
                <a href="" class="resizable-close">
                    <i class="fal fa-times"></i>
                </a>

            </div>
            <div class="resizable-body">

                <div id="postReply">

                    <div class="topic-reply-left">
                        @if (this.CurrentUser != null)
                        {
                            <a href="#" class="avatar-link">
                                <avatar data-toggle="tooltip" title="@this.CurrentUser.DisplayName" class="avatar" url="@this.CurrentUser.Avatar.Url" />
                            </a>
                        }
                    </div>
                    <div class="topic-reply-body">

                        <form asp-controller="Home" asp-action="Topic" method="post" enctype="multipart/form-data">

                            <card>
                                <card-body>

                                    <input type="hidden" asp-for="EntityId" />

                                    @await DisplayAsync(new View("Editor", new
                                    {
                                        value = string.Empty,
                                        placeHolderText = T["Post a reply..."],
                                        htmlName = @Model.EditorHtmlName,
                                        autoFocus = false
                                    }))

                                </card-body>
                            </card>

                            <card>
                                <card-body>

                                    <div class="float-right">
                                        <a class="btn btn-lg btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
                                        <button type="submit" class="btn btn-primary">
                                            @T["Post Reply"]
                                        </button>
                                    </div>
                                </card-body>
                            </card>

                        </form>

                    </div>
                </div>


            </div>
        </div>
  
</div>


