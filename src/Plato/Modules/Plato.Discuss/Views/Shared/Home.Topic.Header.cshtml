@model Topic
@{
    var replies = @Model.TotalReplies == 1
        ? "reply"
        : "replies";
}


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="list-left">
    <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@Model.CreatedUserId" asp-route-alias="@Model.CreatedBy.Alias">
        <avatar data-toggle="tooltip" title="@Model.CreatedBy.DisplayName" class="avatar" url="@Model.CreatedBy.Avatar.Url" />
    </a>
</div>
<div class="list-body">
    <h4>
        @Model.Title
        @if (Model.IsPinned)
        {
            <span title="@T["Pinned"]" data-toggle="tooltip" class="d-inline-block">
                <i class="fal fa-thumbtack"></i>
            </span>
        }
    </h4>
    <span class="text-muted">
        @T["Posted"]
        <date utc="@Model.CreatedDate" itemprop="createdDate" data-toggle="tooltip" />
        @T["by"]
        <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@Model.CreatedUserId" asp-route-alias="@Model.CreatedBy.Alias">@Model.CreatedBy.DisplayName</a>
        - @Model.TotalReplies.ToPrettyInt() @T[replies]
    </span>
</div>
<hr />


