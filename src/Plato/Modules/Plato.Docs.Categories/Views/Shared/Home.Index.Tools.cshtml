@model CategoryBase
@{
    var postPermission = Plato.Docs.Permissions.PostDocs;
}

<authorize asp-permission="@postPermission.Name">
    <authorize-success>
        @if (Model != null)
        {
            <a asp-route-area="Plato.Docs" asp-route-controller="Home" asp-route-action="Create" asp-route-categoryId="@Model.Id" class="btn btn-primary ml-2" title="@T["New Doc"]">
                <i class="fal fa-fw fa-plus"></i>
                @T["New Doc"]
            </a>
        }
        else
        {
            <a asp-route-area="Plato.Docs" asp-route-controller="Home" asp-route-action="Create" class="btn btn-primary ml-2" title="@T["New Doc"]">
                <i class="fal fa-fw fa-plus"></i>
                @T["New Doc"]
            </a>
        }
    </authorize-success>
    <authorize-fail>
        @if (base.CurrentUser == null)
        {
            <a asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-primary ml-2" title="@T["Login to Post"]">
                <i class="fal fa-fw fa-lock"></i>
                @T["Login to Post"]
            </a>
        }
    </authorize-fail>
</authorize>


