@model Doc

<div>
    <input type="search" class="form-control"
            data-provide="filter-list"
            data-filter-list-empty=".no-channel-results"
            data-filter-list-target=".tree"
            placeholder="@T["Search docs..."]" />
</div>
<div class="mt-2">
    @await DisplayAsync(new View("DocTree", new
    {
        options = new EntityTreeOptions()
        {
            SelectedEntity = Model.Id,
            EditMenuViewName = "DocTreeMenu",
            IndexOptions = new EntityIndexOptions()
            {
                FeatureId = Model.FeatureId,
                CategoryId = Model.CategoryId
            },
            RouteValues = new RouteValueDictionary()
            {
                ["area"] = "Plato.Docs",
                ["controller"] = "Home",
                ["action"] = "Display"
            }
        }
    }))
</div>
