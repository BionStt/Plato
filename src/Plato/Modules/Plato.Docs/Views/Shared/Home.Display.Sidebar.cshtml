@using Microsoft.AspNetCore.Routing
@using Plato.Entities.Models
@model Doc

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Docs"]</h6>
    </card-title>
    <card-body>

        @await DisplayAsync(new View("EntityTree", new
        {
            options = new EntityTreeOptions()
            {
                IndexOptions = new EntityIndexOptions()
                {
                    FeatureId = Model.FeatureId
                },
                SelectedEntity = Model.Id,
                EditMenuViewName = "",
                RouteValues = new RouteValueDictionary()
                {
                    ["area"] = "Plato.Docs",
                    ["controller"] = "Home",
                    ["action"] = "Display"
                }
            }
        }))
        
    </card-body>
</card>
