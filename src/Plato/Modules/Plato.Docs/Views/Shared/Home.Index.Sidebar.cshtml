@using Microsoft.AspNetCore.Routing
@using Plato.Docs
@model EntityIndexViewModel<Doc>
@{
    var postPermission = Permissions.PostDocs;
}
<card class="card card-body-flush">
    <card-title>
        <authorize asp-permission="@postPermission.Name">
            <authorize-success>
                <a asp-route-action="Create" class="btn btn-sm dropdown-toggle text-muted dropdown-toggle-no-caret float-right" data-provide="tooltip" title="@T["New Doc"]">
                    <i class="fal fa-plus"></i>
                </a>
            </authorize-success>
        </authorize>
        <h6 class="card-title">@T["Browse Docs"]</h6>
    </card-title>
    <card-body>
        @await DisplayAsync(new View("DocTree", new
        {
            options = new EntityTreeOptions()
            {
                RouteValues = new RouteValueDictionary()
                {
                    ["area"] = "Plato.Docs",
                    ["controller"] = "Home",
                    ["action"] = "Display"
                }
            }
        }))
    </card-body>
</card>
