@model Entity
@{
    Layout = null;
    var updatedDate = Model.ModifiedDate ?? Model.CreatedDate;
}
@if (Model != null)
{
    <div class="popper-content">
        <div class="p-3">
            <h6>@Model.Title</h6>
            <div class="text-muted">
                @Model.Abstract
            </div>
        </div>
        <hr class="m-0 p-0"/>
        <div class="p-3">
            @T["Updated"] <date utc="@updatedDate"></date>
        </div>
    </div>
}
else
{
    <div class="popper-content">
        <div class="p-3">
            @T["This content is private"]
        </div>
    </div>
}
