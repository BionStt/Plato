@model LabelIndexViewModel<Plato.Ideas.Labels.Models.Label>

<nav class="navbar p-0">
    <form class="form-inline" asp-route-controller="Admin" asp-route-action="Index" method="get" enctype="multipart/form-data">
        <div class="position-relative min-w-200">
            <div class="search-input-group">
                <input class="form-control" name="opts.search" value="@Model.Options.Search" type="search" placeholder="@T["Search labels..."]" aria-label="Search" autofocus />
                <button class="btn btn-primary" type="submit">
                    <i class="fal fa-search"></i>
                </button>
            </div>
        </div>
    </form>
    <a asp-rooute-controller="Admin" asp-route-action="Create" class="btn btn-primary ml-sm-2">
        <i class="fal fa-plus"></i>
        @T["Add Label"]
    </a>
</nav>