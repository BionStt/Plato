@model EditNotificationsViewModel
@{
    var i = 0;
}
<input type="hidden" asp-for="Id" />

<div class="accordion" role="tablist">
    @foreach (var category in Model.CategorizedNotificationTypes.Keys)
    {
        var headerId = category + "Header";
        var contentId = category + "Notifications";
        var css = i == 0 ? "collapse show" : "collapse";
        i++;
        <div class="card">
            <div class="card-header" role="tab" id="@headerId">
                <h6 class="card-title">
                    <a data-toggle="collapse" href="#@contentId" aria-expanded="true" aria-controls="collapseOne">
                        @category
                    </a>
                </h6>
            </div>
            <div id="@contentId" class="@css" role="tabpanel" aria-labelledby="@headerId" data-parent="#accordion">
                <table class="table table-hover m-0 p-0">
                    <tbody>
                    @foreach (var notificationType in Model.CategorizedNotificationTypes[category])
                    {
                        <tr>
                            <td class="col-10">
                                <h6>@notificationType.Name</h6>
                                @notificationType.Description
                            </td>
                            <td class="col-2">
                                <label>
                                    <span class="switch switch-round">
                                        @*checked="@(Model.Role?.RoleClaims?.Any(x => x.ClaimValue == permission.Name))"*@
                                        <input class="form-check-input" type="checkbox" value="true" name="Checkbox.@notificationType.Name" />
                                        <span class="switch-slider"></span>
                                    </span>
                                </label>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

