@model AggregatedResult<DateTimeOffset>
@{
    var labels = Model?.SerializeLabels() ?? "[]";
    var data = Model?.SerializeCounts() ?? "[]";
    var chartId = "newUsersByDate";
}

<card>
    <card-body>

        <i class="fal fa-user float-right"></i>
        @if (Model != null)
        {
            <h5 class="d-inline">@Model.Total().ToPrettyInt()</h5>
        }
        else
        {
            <h5>0</h5>
        }
        <br />
        @T["Sign Ups"]

        <div class="position-relative w-100 mt-3" style="height: 150px;">
            <canvas id="@chartId"></canvas>
        </div>
    </card-body>
</card>

<script section="Footer">
    
    if (typeof window.$.Plato.Reports === "undefined") {
        throw new Error("$.Plato.Reports Required");
    }

    if (typeof window.$.Plato.Charts === "undefined") {
        throw new Error("$.Plato.Charts Required");
    }

    $(function (win, doc, $) {

        "use strict";

        var app = win.$.Plato,
            charts = win.$.Plato.Charts;

        app.ready(function () {

            charts.initBar("@chartId", {
                labels: @Html.Raw(labels),
                datasets: [
                    {
                        label: 'New Users',
                        fill: true,
                        backgroundColor: Chart.helpers.color(app.ui.chartColors.blue).alpha(0.1).rgbString(),
                        borderColor: app.ui.chartColors.blue,
                        borderWidth: 1,
                        lineWidth: 1,
                        pointRadius: 0,
                        pointHoverRadius: 0,
                        data: @Html.Raw(data)
                    }
                ]
            });


        });


    }(window, document, jQuery));

</script>