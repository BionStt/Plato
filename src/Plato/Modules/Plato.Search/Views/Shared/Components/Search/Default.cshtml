@model SearchIndexViewModel 

<form asp-route-area="Plato.Search" id="search" asp-route-controller="Home" asp-route-action="Index" method="get" role="form">
    <div class="input-group">
        <input asp-for="Keywords" type="search" class="form-control" placeholder="Search..." />
        <div class="btn-group" role="group">
            <div class="dropdown">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                <div class="dropdown-menu dropdown-menu-right" role="menu">
                    <div class="px-3 py-2">
                        <div class="form-group">
                            <label for="filter">Filter by</label>
                            <select class="form-control">
                                <option value="0" selected>All Snippets</option>
                                <option value="1">Featured</option>
                                <option value="2">Most popular</option>
                                <option value="3">Top rated</option>
                                <option value="4">Most commented</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="contain">Author</label>
                            <input class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label for="contain">Contains the words</label>
                            <input class="form-control" type="text" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block"><span class="fal fa-search" aria-hidden="true"></span></button>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary"><i class="fal fa-search" aria-hidden="true"></i> @T["Search"]</button>
        </div>
    </div>
</form>