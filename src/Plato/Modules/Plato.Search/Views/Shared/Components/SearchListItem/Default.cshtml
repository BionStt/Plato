@model SearchListItemViewModel

<a asp-route-area="Plato.Discuss" asp-route-controller="Home" asp-route-action="Topic" asp-route-id="@Model.Entity.Id" asp-route-alias="@Model.Entity.Alias" class="font-weight-bold">
    @Html.Raw(Model.Entity.Title.HighlightTerms(Model.ViewOptions.Search))
</a>
<div class="text-muted">
    @Html.Raw(Model.Entity.Abstract.HighlightTerms(Model.ViewOptions.Search))
</div>
<div>
    @T["By"] <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-id="@Model.Entity.CreatedUserId" asp-route-alias="@Model.Entity.CreatedBy.Alias">@Model.Entity.CreatedBy.DisplayName</a>,
    <date utc="@Model.Entity.CreatedDate" itemprop="createdDate" data-toggle="tooltip" />
</div>


