@model SiteSettingsViewModel
@{
    ViewData["Title"] = "General Settings";
}

<h4>@T["General Settings"]</h4>
<span class="text-muted">@T["Manage general application settings."]</span>
<hr/>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    
    <card>
        <card-title>
            <h6 class="card-title">@T["General"]</h6>
        </card-title>
        <card-body>

            <div class="row">
                <div class="col">
                    <fieldset>
                        <div class="form-group" asp-validation-class-for="SiteName">
                            <label asp-for="@Model.SiteName">
                                <strong>@T["Site Name"]</strong>
                                <span asp-validation-for="@Model.SiteName" class="text-danger"></span>
                                <br />
                                <span class="text-muted">@T["Your site name is shown at the top of pages, within page titles and within emails generated by Plato."]</span>
                            </label>
                            <input placeholder="noreply@yourdomain.com" asp-for="@Model.SiteName" class="form-control" autofocus />
                        </div>
                    </fieldset>
                </div>
            </div>

        </card-body>
    </card>

    <card class="card mt-4">
        <card-footer>
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
        </card-footer>
    </card>

</form>