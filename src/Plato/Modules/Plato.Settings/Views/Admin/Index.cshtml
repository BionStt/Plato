@model SiteSettingsViewModel
@{
    ViewData["Title"] = "General Settings";
}

<h4>@T["General Settings"]</h4>
<span class="text-muted">@T["Manage general application settings."]</span>
<hr/>

<form asp-route-action="Index" method="post" enctype="multipart/form-data">
    
    <card>
        <card-title>
            <h6 class="card-title">@T["General"]</h6>
        </card-title>
        <card-body>
            
            <fieldset>
                <div class="form-group" asp-validation-class-for="SiteName">
                    <label asp-for="SiteName">
                        <strong>@T["Site Name"]</strong>
                        <span asp-validation-for="SiteName" class="text-danger"></span>
                        <br/>
                        <span class="text-muted">@T["Your site name is shown at the top of pages, within page titles and within emails generated by Plato."]</span>
                    </label>
                    <input asp-for="SiteName" class="form-control" autofocus/>
                </div>
                <div class="form-group" asp-validation-class-for="TimeZone">
                    <label asp-for="TimeZone">
                        <strong>@T["Time Zone"]</strong>
                        <span asp-validation-for="TimeZone" class="text-danger"></span>
                        <br />
                        <span class="text-muted">@T["Specify the time zone for the web server(s) hosting your Plato installation."]</span>
                    </label>
                    <select class="form-control"
                            asp-for="TimeZone"
                            asp-items="@Model.AvailableTimeZones"></select>
                </div>
                <div class="form-group" asp-validation-class-for="TimeZone">
                    <label asp-for="DateTimeFormat">
                        <strong>@T["Date Format"]</strong>
                        <span asp-validation-for="DateTimeFormat" class="text-danger"></span>
                        <br />
                        <span class="text-muted">@T["Customize the default format to display dates within Plato."]</span>
                    </label>
                    <select class="form-control"
                            asp-for="DateTimeFormat"
                            asp-items="@Model.AvailableDateTimeFormat"></select>
                </div>
            </fieldset>
            
        </card-body>
    </card>

    <card class="card mt-4">
        <card-footer>
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
        </card-footer>
    </card>

</form>