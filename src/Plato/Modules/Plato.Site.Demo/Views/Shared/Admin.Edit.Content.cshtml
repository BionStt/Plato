@model DemoSettingsViewModel

<card>
    <card-title>
        <h6 class="card-title">@T["Admin Account"]</h6>
        <div class="text-muted">
            @T["The default administrator account users can login with to explore the admin dashboard."]
        </div>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DefaultFrom">
                        <label asp-for="AdminUserName">
                            <strong>@T["Admin Username"]</strong>
                            <span asp-validation-for="AdminUserName" class="text-danger"></span>
                            <br />
                            <span class="text-muted">@T["The username for the demo administrator account."]</span>                            
                        </label>
                        <input placeholder="@T["your administrator username..."]" asp-for="AdminUserName" class="form-control" autofocus />
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DefaultFrom">
                        <label asp-for="AdminPassword">
                            <strong>@T["Admin Password"]</strong>
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            <br />
                            <span class="text-muted">@T["The password for the demo administrator account."]</span>                            
                        </label>
                        <div class="search-input-group">
                            <input asp-for="AdminPassword"
                                   type="search"
                                   class="form-control"
                                   autocomplete="off"
                                   data-provide="password"
                                   placeholder="@T["your administrator password..."]" />
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" title="@T["Toggle Visibility"]" role="button">
                                <i class="fal fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

    </card-body>
</card>

<card class="card mt-4">
    <card-footer>
        <button class="btn btn-primary" type="submit">@T["Save"]</button>
    </card-footer>
</card>
