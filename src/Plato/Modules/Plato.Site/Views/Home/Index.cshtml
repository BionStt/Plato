@{
    AddTitleSegment(T["Free, Open Source User Community & Customer Support Software for ASP.NET Core"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="flex-column flex-lg-row no-gutters d-flex overflow-hidden">
    <div class="col-12 col-lg-6 align-self-start align-self-lg-center text-center">
        <div class="my-5 my-lg-0 mx-auto max-w-600">
            <canvas data-provide="logo" class="w-100"></canvas>
            <h1 class="display-4 text-primary">Plato</h1>
            <hr class="divider border-primary my-4" />
            <h3 class="font-weight-light">
                A free, open source, extensible user community & support platform built upon .NET Core
            </h3>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="About" data-provide="loader-spy">
                    Learn More
                </a>
                <div class="btn-group github-button" role="group" aria-label="GitHub button">
                    <a class="btn btn-secondary btn-lg" href="https://github.com/InstantASP/plato" target="_blank" title="Plato on GitHub">
                        <i class="fab fa-github"></i> Star
                    </a>
                    <a class="btn btn-secondary btn-lg star-count" href="https://github.com/InstantASP/plato/stargazers" target="_blank" title="Stars">
                        ---
                    </a>                    
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 overflow-hidden text-center text-lg-right align-self-start align-self-lg-center">
        <img alt="Plato Dashboard Screen Grab" src="plato.site/content/images/dashboard.png" class="img-md-fluid mt-0 mt-lg-5 mx-md-auto w-md-90 d-inline-block" />
    </div>
</section>

<!-- Features -->
<section class="page bg-light">
    <div class="container">
        <div class="p-5 text-center">
            <div class="row">
                <div class="col-12">
                    <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                    <h1 class="text-uppercase display-4 text-primary font-weight-bold">
                        BETTER, FASTER SUPPORT... FREE
                    </h1>
                    <hr class="divider primary my-4">
                    <h3 class="font-weight-light">
                        Plato offers a full stack of software to help you collaborate with & support your users
                    </h3>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-comment-alt"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Discuss</strong>
                                <span class="d-block mb-0">
                                    User Community
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-book-open"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Docs</strong>
                                <span class="d-block mb-0">
                                    Product Documentation
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-copy"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Articles</strong>
                                <span class="d-block mb-0">
                                    Knowledge Base
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-question"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Questions</strong>
                                <span class="d-block mb-0">
                                    Questions & Answers
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-lightbulb"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Ideas</strong>
                                <span class="d-block mb-0">
                                    Product Ideation
                                </span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 mb-4">
                            <div class="d-block p-5 text-center bg-white border" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Discuss">
                                <span class="icon-circle mb-4">
                                    <i class="fal fa-4x fa-bug"></i>
                                </span>
                                <strong class="d-block h4 mb-2">Issues</strong>
                                <span class="d-block mb-0">
                                    Issue tracking
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="p-5 bg-white border">
                        <i class="fal fa-plus text-primary fa-4x mb-4"></i>
                        <h1 class="text-uppercase text-primary font-weight-bold">
                            Hundreds of Modules
                        </h1>
                        <hr class="divider primary my-4">
                        <h3 class="font-weight-light">
                            Custom-fit Plato with hundreds of official modules. Add theming, notifications, reporting, social integrations & more with a single click via the dashboard.
                        </h3>
                        <a class="btn btn-primary btn-lg mt-4" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Modules" data-provide="loader-spy">
                            All Official Modules
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Explore The Demo -->
<section class="page bg-primary-25">
    <div class="container">
        <div class="p-5 text-center bg-white">
            <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
            <h1 class="text-uppercase text-primary font-weight-bold">
                Explore The Demo
            </h1>
            <hr class="divider primary my-4" />
            <h3 class="font-weight-light">
                Take Plato for a spin. The demo provides access to a default administrator account so you can fully explore Plato. Questions? <a asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Contact">Get in touch</a>
            </h3>
            <a class="btn btn-primary btn-lg mt-4" target="_blank" href="@platoSiteOptions.DemoUrl" data-provide="loader-spy">
                Launch Demo
            </a>
        </div>
    </div>
</section>

<!-- Built Upon -->
<section class="page bg-purple">
    <div class="container">
        <div class="p-5 text-center">
            <h1 class="text-uppercase text-white font-weight-bold">
                Built Upon
            </h1>
            <hr class="divider border-light my-4" />
            <div class="row">
                <div class="col-lg-4 mt-4">
                    <img alt=".NET Core Logo" src="~/plato.site/content/images/netcore.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/vs.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/bootstrap.png" class="img-fluid max-w-150" />
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Get the Code -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="GitHub Octocat Logo" src="plato.site/content/images/octocat.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        Get The Code
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        Plato is free and open source. You can download the code or contribute back to improve the project on GitHub.
                    </h3>
                    <a class="btn btn-primary btn-lg mt-4" target="_blank" href="https://github.com/InstantASP/plato" data-provide="loader-spy">
                        <i class="fab fa-github"></i>
                        Visit Plato on GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Managed Hosting -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="Plato Logo" src="plato.site/content/images/logo.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        Managed Hosting
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        Plato is free. Unfortunately data centers are not. We can host & manage Plato for you for a monthly fee.
                    </h3>
                    <h2 class="font-weight-bold text-primary my-4">
                        $100 USD <span class="small text-muted font-weight-light">/ month</span>
                    </h2>
                    <a class="btn btn-primary btn-lg" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Pricing" data-provide="loader-spy">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

