                            <div class="col-12 col-lg-4 mb-4">
                                <a class="d-block p-5 text-center border" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Discuss">

                                    <i class="fal fa-4x fa-question-circle mb-4"></i>
                                    <strong class="d-block h4 mb-2">Questions</strong>
                                    <span class="d-block mb-0">
                                        Questions & Answers
                                    </span>

                                </a>
                            </div>
                            <div class="col-12 col-lg-4 mb-4">
                                <a class="d-block p-5 text-center border" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Discuss">

                                    <i class="fal fa-4x fa-lightbulb mb-4"></i>
                                    <strong class="d-block h4 mb-2">Ideas</strong>
                                    <span class="d-block mb-0">
                                        Product Ideation
                                    </span>

                                </a>
                            </div>
                            <div class="col-12 col-lg-4 mb-4">
                                <a class="d-block p-5 text-center border" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Discuss">
                                    <i class="fal fa-4x fa-bug mb-4"></i>
                                    <strong class="d-block h4 mb-2">Issues</strong>
                                    <span class="d-block mb-0">
                                        Issue tracking
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <i class="fal fa-plus text-primary fa-4x mb-4"></i>
