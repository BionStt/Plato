@using Plato.Features.ViewModels
@{
    ViewData["Title"] = "Plato - Built for Extension";
}

<!-- Jumbotron -->
<section class="flex-column d-flex text-center" style="background: url(/plato.site/content/images/bg14.png) bottom center repeat-x;">
    <div class="row">
        <div class="col-12">
            <div class="my-6 mx-auto">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class="text-uppercase display-4 text-primary font-weight-bold">
                    Built for Extension
                </h1>
                <hr class="divider border-primary" />
                <h2 class="font-weight-light my-4">
                    Plato is built upon modules. Modules are independent NuGet packages that can add functionality to Plato.
                </h2>

            </div>
        </div>
        <div class="col-12 max-h-700 overflow-hidden">
            <img alt="Plato Features Screen Grab" src="~/plato.site/content/images/features.png" class="img-fluid mx-auto w-80 d-inline-block" />
        </div>
    </div>
</section>

<!-- All Modules -->
<section class="page">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-uppercase text-primary font-weight-bold">
                    All Modules
                </h1>
                <h3 class="font-weight-light">
                    All modules below are official modules and available out of the box with Plato.
                </h3>
                <hr class="divider primary my-4">
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @await DisplayAsync(new View("SiteModuleList", new
                {
                    options = new FeatureIndexOptions()
                }))
            </div>
        </div>
    </div>
</section>


<!-- The Module System -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
