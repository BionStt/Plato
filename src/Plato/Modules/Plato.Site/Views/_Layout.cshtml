<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title asp-separator=" - ">Plato</title>
    <link rel="stylesheet" href="/css/vendors/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/vendors/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/app/plato.min.css" />
    <link rel="stylesheet" href="/plato.site/content/css/site.min.css" />
    <link rel="stylesheet" href="/sites/plato/themes/plato-site/theme.css" />
    <link rel="icon" href="/favicon.ico" />
    @await RenderSectionAsync("Header", required: false)
</head>
<body>

    <div id="top"></div>

    <div class="page-loader" data-provide="loader">
        <div class="plato-loader position-absolute-center">
            <div class="cube"></div>
            <div class="cube bg-primary"></div>
            <div class="cube bg-success"></div>
            <div class="cube bg-warning"></div>
            <div class="cube bg-danger"></div>
        </div>
    </div>
    <cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
        @await DisplayAsync(new View("SiteHeader", new
        {
            sticky = true
        }))
    </cache>
    <main class="d-flex flex-column" role="main">
        @RenderBody()
    </main>
    <cache expires-after="@TimeSpan.FromMinutes(30)">
        @await DisplayAsync(new View("SiteFooter", new
        {
            options = new FeatureIndexOptions()
        }))
    </cache>

    <div class="slide-out slide-out-bottom-right" data-provide="slide-spy">
        <a href="#top" data-provide="scroll" class="btn btn-primary" data-toggle="tooltip" title="@T["Back to Top"]">
            <i class="fal fa-chevron-up  d-inline-block"></i>
        </a>
    </div>

    <script src="~/js/vendors/jquery.min.js"></script>
    <script src="~/js/vendors/bootstrap.min.js"></script>
    <script src="~/js/app/plato.min.js" asp-append-version="true"></script>
    <script src="~/js/app/plato-ui.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script async defer src="/plato.site/content/js/site.js"></script>
    <script src="https://www.googletagmanager.com/gtag/js?id=UA-152865008-1"></script>
    <script>window.dataLayer = window.dataLayer || [];function gtag() { dataLayer.push(arguments); }gtag('js', new Date());gtag('config', 'UA-152865008-1');</script>

</body>
</html>