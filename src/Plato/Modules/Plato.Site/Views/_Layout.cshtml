<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title asp-separator=" - ">Plato</title>
    <link rel="stylesheet" href="~/css/vendors/bootstrap.css" />
    <link rel="stylesheet" href="~/css/vendors/font-awesome.css" />
    <link rel="stylesheet" href="~/css/app/plato.css" />
    <link rel="stylesheet" href="~/plato.site/content/css/site.css" />
    <link rel="stylesheet" href="/sites/plato/themes/plato-site/theme.css" />
    @await RenderSectionAsync("Header", required: false)
</head>
<body>

    <div class="page-loader" data-provide="loader">
        <div class="plato-loader position-absolute-center">
            <div class="cube"></div>
            <div class="cube bg-primary"></div>
            <div class="cube bg-success"></div>
            <div class="cube bg-warning"></div>
            <div class="cube bg-danger"></div>
        </div>
    </div>

    @await DisplayAsync(new View("SiteHeader", new
    {
        sticky = true
    }))

    <main class="d-flex flex-column" role="main">
        @RenderBody()
    </main>

    @await DisplayAsync(new View("SiteFooter", new
    {
        options = new FeatureIndexOptions()
    }))


    <script src="~/js/vendors/jquery.js"></script>
    <script src="~/js/vendors/bootstrap.js"></script>
    <script src="~/js/app/plato.js" asp-append-version="true"></script>
    <script src="~/js/app/plato-ui.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>