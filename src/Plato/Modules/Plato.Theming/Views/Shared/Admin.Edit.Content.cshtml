@model EditThemeViewModel

<card class="card card-body-flush">
<card-title>
    <h6 class="card-title">
        @if (Model.File != null)
        {
            @T[Model.File.Name]
        }
        else
        {
            @T["Edit Theme"]
        }
     
    </h6>
</card-title>
    <card-body>
        
        <ul class="list-group list-group-flush list-group-hover">

            @if (Model.File?.Parent != null)
            {
                <li class="list-group-item">
                    <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@Model.Id" asp-route-path="@Model.File?.Parent.RelativePath" class="btn btn-sm btn-secondary" data-provide="tooltip" title="@T["Parent Directory"]">
                        <i class="fal fa-level-up fa-flip-horizontal"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a asp-route-controller="Admin" asp-route-action="Index" class="btn btn-sm btn-secondary" data-provide="tooltip" title="@T["Parent Directory"]">
                        <i class="fal fa-level-up fa-flip-horizontal"></i>
                    </a>
                </li>
            }

            @if (Model.Files.Any())
            {
                foreach (var file in Model.Files)
                {
                    <li class="list-group-item list-group-item-action">
                        @if (file.Children.Count > 0)
                        {
                            <i class="fal fa-folder mr-2" data-provide="tooltip" title="@T["Folder"]"></i>
                            <h6 class="d-inline-block">
                                <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@Model.Id" asp-route-path="@file.RelativePath" class="font-weight-bold">
                                    @file.Name
                                </a>
                            </h6>
                            @if (file.Children.Count == 1)
                             {
                                 <span class="text-muted">
                                     / @file.Children[0].Name
                                 </span>
                             }
                        }
                        else
                        {
                            <i class="fal fa-file mr-2" data-provide="tooltip" title="@T["File"]"></i>
                            <h6 class="d-inline-block">
                                <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@file.Name" class="font-weight-bold">
                                    @file.Name
                                </a>
                            </h6>
                        }
                    </li>
                }

            }
            else
            {

                <li class="list-group-item">
                    @T["No themes found"]
                </li>

            }
        </ul>

    </card-body>
</card>


