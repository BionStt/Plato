@model EditThemeViewModel

<card class="card card-body-flush">
<card-title>
    <h6 class="card-title">@T["Edit Theme"]</h6>
</card-title>
    <card-body>
        
        @if (Model.Files.Any())
        {
            <ul class="list-group list-group-flush list-group-hover">
                @foreach (var file in Model.Files)
                {
             
                    <li class="list-group-item list-group-item-action">

                        <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@file.Name" class="btn btn-secondary float-right">
                            <i class="fal fa-pencil"></i>
                            @T["Edit"]
                        </a>

                        <h6 class="d-inline-block">

                            @if (file.Children.Count > 0)
                            {
                                <i class="fal fa-folder mr-2"></i>
                                <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@file.Name" class="font-weight-bold">
                                    @file.Name
                                    
                                    @if (file.Children.Count == 1)
                                    {
                                        <span class="text-muted">
                                            / @file.Children[0].Name
                                        </span>
                                    }
                                  
                                </a>
                            }
                            else
                            {
                                <i class="fal fa-file mr-2"></i>
                                <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@file.Name" class="font-weight-bold">
                                    @file.Name
                                </a>
                            }
                        
                        </h6>

                    </li>

                }
            </ul>
        }
        else
        {
            <ul class="list-group list-group-flush list-group-hover">
                <li class="list-group-item">
                    @T["No themes found"]
                </li>
            </ul>
        }
        

    </card-body>
</card>


