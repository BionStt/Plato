@model ActivateAccountViewModel
@{
    AddTitleSegment(T["Activate Account"]);
}

@if (Model.IsValidConfirmationToken)
{
    <h4>@ViewData["Title"]</h4>
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="ActivateAccount" method="post" data-disable-submit="true" role="form">
                <span class="text-muted">@T["Enter your email address below to activate your account"]</span>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-form-label font-weight-bold">@T["Email"]</label>
                    <input asp-for="Email" class="form-control" placeholder="@T["email@address.com"]" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input asp-for="ConfirmationToken" type="hidden" />
                <div class="form-group">
                    <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@ViewData["Title"]</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>@T["Invalid Token"]</h4>
    <div class="row">
        <div class="col-md-6">
            <span class="text-muted">@T["The confirmation token has expired"]</span>
        </div>
    </div>
}
