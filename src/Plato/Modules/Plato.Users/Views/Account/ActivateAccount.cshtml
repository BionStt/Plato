@model ActivateAccountViewModel
@{
    ViewData["Title"] = T["Activate Account"];
}

@if (Model.IsValidConfirmationToken)
{
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="ActivateAccount" method="post" class="form-horizontal">
                <h4>@T["Enter your email address below to activate your account"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="col-form-label font-weight-bold">@T["Email"]</label>
                    <input asp-for="Email" class="form-control" placeholder="@T["email@address.com"]" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input asp-for="ConfirmationToken" type="hidden" />
                <div class="form-group">
                    <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@ViewData["Title"]</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h2>@T["Invalid Token"]</h2>
    <div class="row">
        <div class="col-md-6">
            <h4>@T["The confirmation token has expired"]</h4>
        </div>
    </div>
}

