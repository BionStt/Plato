@model ConfirmEmailViewModel
@{
    ViewData["Title"] = T["Confirm Email"];
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="ConfirmEmail" method="post">
            <h4>@T["We'll send you an email confirmation link"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserIdentifier" class="col-form-label font-weight-bold">@T["Email or username"]</label>
                <input asp-for="UserIdentifier" placeholder="@T["email@address.com"]" class="form-control" autofocus />
            </div>
            <div class="form-group">
                <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@ViewData["Title"]</button>
            </div>
        </form>
    </div>
</div> 
