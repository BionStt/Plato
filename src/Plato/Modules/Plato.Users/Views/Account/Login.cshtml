@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Plato.Models.Users;
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Authentication
@model Plato.Users.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/plato.users/css/plato-users.css" />

<my-app [loading]="false"></my-app>

<hr/>


<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>@T["Use a local account to log in."]</h4>
            <hr />
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-control-label font-weight-bold"></label>
                <span asp-validation-for="@Model.Email" class="text-danger float-xl-right"></span>
                <input asp-for="@Model.Email" value="@Model.Email" placeholder="@T["email@address.com"]" class="form-control d-block" />
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserName" class="form-control-label font-weight-bold"></label>
                <span asp-validation-for="@Model.UserName" class="text-danger float-xl-right"></span>
                <input asp-for="@Model.UserName" value="@Model.UserName" placeholder="@T["Username"]" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="form-control-label font-weight-bold"></label>
                <span asp-validation-for="@Model.Password" class="text-danger float-xl-right"></span>
                <input asp-for="@Model.Password" class="form-control" placeholder="@T["Password"]" />
                
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="@Model.RememberMe">
                        <input asp-for="@Model.RememberMe" />
                        @T["Remember me"]
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">@T["Login"]</button>
            </div>
            <p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Register as a new user?"]</a>
            </p>
            @*<p>
                <a asp-action="ForgotPassword">@T["Forgot your password?"]</a>
                </p>*@
        </form>
    </div>

