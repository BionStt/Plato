@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>@T["Use a local account to log in."]</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.UserName" class="col-form-label font-weight-bold"></label>
                <span asp-validation-for="@Model.UserName" class="text-danger float-xl-right"></span>
                <input asp-for="@Model.UserName" value="@Model.UserName" placeholder="@T["Username"]" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="col-form-label font-weight-bold"></label>
                <span asp-validation-for="@Model.Password" class="text-danger float-xl-right"></span>
                <input asp-for="@Model.Password" class="form-control" placeholder="@T["Password"]" />
            </div>
            <div class="form-check">
                <label asp-for="@Model.RememberMe">
                    <input asp-for="@Model.RememberMe" />
                    @T["Remember me"]
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">@T["Login"]</button>
            </div>
            <p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Register as a new user?"]</a>
            </p>
            @*<p>
                <a asp-action="ForgotPassword">@T["Forgot your password?"]</a>
                </p>*@
        </form>
    </div>

