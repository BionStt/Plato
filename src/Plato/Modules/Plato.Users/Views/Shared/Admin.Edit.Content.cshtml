@model EditUserViewModel

<input asp-for="Id" type="hidden" />

<card>
    <card-title>
        <h6 class="card-title">@T["Account Details"]</h6>
    </card-title>
    <card-body>
        <div class="form-group" asp-validation-class-for="UserName">
            <label asp-for="UserName"><strong>@T["Name"]</strong></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" autofocus/>
        </div>
        <div class="form-group" asp-validation-class-for="Email">
            <label for="Email"><strong>@T["Email"]</strong></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" type="email"/>
        </div>
    </card-body>
</card>
