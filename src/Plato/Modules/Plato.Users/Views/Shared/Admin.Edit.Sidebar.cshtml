@model EditUserViewModel

@if (!Model.EmailConfirmed && !Model.IsNewUser)
{
    <div class="alert alert-danger">
        <p>
            <i class="fal fa-exclamation-triangle mr-2"></i>
            @T["The email address for this account has not been confirmed"]
        </p>
        <a asp-route-area="Plato.Users" asp-route-controller="Admin" asp-route-action="ConfirmEmail" asp-route-id="@Model.Id" class="btn btn-danger">
            @T["Enable account"]
        </a>
    </div>
}

<card>
    <card-title>
        <h6 class="card-title">@T["Photo"]</h6>
    </card-title>
    <card-body>
        <div class="profile-avatar">
            <div class="avatar-edit">
                <input type="file" id="imageUpload"
                       asp-for="AvatarFile"
                       data-upload="avatar"
                       data-upload-preview-selector="#avatarPreview"
                       data-upload-accept=".png, .jpg, .jpeg"/>
                <label for="imageUpload">
                    <i class="fa fa-upload"></i>
                </label>
            </div>
            <div class="avatar-preview">
                <avatar id="avatarPreview" class="avatar" user-id="@Model.Id"/>
            </div>
        </div>
    </card-body>
</card>

<card>
    <card-title>
        <h6 class="card-title">@T["Test Panel"]</h6>
    </card-title>
    <card-body>
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </card-body>
</card>