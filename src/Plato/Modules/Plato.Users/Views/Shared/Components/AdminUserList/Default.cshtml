@model UsersIndexViewModel

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Users"]</h6>
    </card-title>
    <card-body>
        <ul class="list-group list-group-flush list-group-hover">
            @foreach (var user in Model.Results.Data)
            {
                <li class="list-group-item">
                    <h6 class="d-inline-block">
                        <avatar class="avatar" user-id="@user.Id" />
                        <a asp-route-area="Plato.Users" asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" class="font-weight-bold">
                            @user.DisplayName
                        </a>
                    </h6>
                    <span class="text-muted">
                        @@@user.UserName
                    </span>
                    <a asp-route-area="Plato.Users" asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary float-right">
                        <i class="fal fa-pencil"></i>
                        @T["Edit"]
                    </a>
                </li>
            }
        </ul>
    </card-body>
</card>

<div class="mt-4 mb-4">
    <pager model="@Model.PagerOpts"></pager>
</div>

