@using Plato.Users.Models
@model User

@{
    var details = Model.GetOrCreate<UserDetail>();
}

<div class="vcard form-group">

    <div class="profile-avatar vcard-photo">
        <div class="avatar-preview">
            <avatar id="avatarPreview" class="avatar" url="@Model.Avatar.Url"/>
        </div>
    </div>

    <ul class="vcard-details">
        <li class="vcard-username text-muted">
            @@@Model.UserName
        </li>
        @if (!String.IsNullOrEmpty(details.Profile.Location))
        {
            <li class="vcard-location">
                <i class="fal fa-map-marker"></i> @details.Profile.Location
            </li>
        }
        @if (!String.IsNullOrWhiteSpace(details.Profile.Url))
        {
            <li class="vcard-url">
                <i class="fal fa-link"></i>
                <a href="@details.Profile.Url">
                    @details.Profile.Url
                </a>
            </li>
        }
        <li>
            @T["Last seen:"] <date utc="@Model.LastLoginDate"></date>
        </li>
    </ul>

</div>



