@model EditUserViewModel

<card>
    <card-title>
        <h6 class="card-title">
            <i class="fal fa-user"></i>
            Personal Details
        </h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DisplayName">
                        <label asp-for="DisplayName"><strong>@T["Display Name"]</strong></label>
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                        <input asp-for="DisplayName" class="form-control" autofocus />
                    </div>
                </fieldset>
            </div>
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="Location">
                        <label for="Location"><strong>@T["Location"]</strong></label>
                        <span asp-validation-for="Location" class="text-danger"></span>
                        <input asp-for="Location" class="form-control" type="text" />
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="Bio">
                        <label for="Bio"><strong>@T["Bio"]</strong></label>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                        <input asp-for="Bio" class="form-control" multiple="true" style="height: 75px;" type="text" />
                    </div>
                </fieldset>
            </div>
        </div>
    </card-body>
</card>

<card>
    <card-title>
        <h6 class="card-title">
            <i class="fal fa-user"></i>
            Personal Details
        </h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="UserName">
                        <label for="UserName"><strong>@T["Username"]</strong></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" class="form-control" type="text" />
                    </div>
                </fieldset>
            </div>
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="Email">
                        <label asp-for="Email"><strong>@T["Email"]</strong></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                </fieldset>
            </div>
        </div>

    </card-body>
</card>

<card>
    <card-title>
        <h6 class="card-title">
            <i class="fal fa-envelope"></i>
            Email Address
        </h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col-6 text-muted">
                @Model.Email
            </div>
            <div class="col-6 text-right">
                <a href="#">
                    @T["Update my email address"]
                </a>
            </div>
        </div>

    </card-body>
</card>

<card>
    <card-title>
        <h6 class="card-title">
            <i class="fal fa-lock"></i>
            Security
        </h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col-6 text-muted">
                ********************
            </div>
            <div class="col-6 text-right">
                <a href="#">
                    @T["Reset my password"]
                </a>
            </div>
        </div>

    </card-body>
</card>

<input type="hidden" asp-for="Id" />
