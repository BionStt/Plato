@model EditSettingsViewModel

<card>
    <card-title>
        <h6 class="card-title">
            @T["Settings"]
        </h6>
    </card-title>
    <card-body>
        
        <div class="form-group" asp-validation-class-for="TimeZone">
            <label asp-for="TimeZone"><strong>@T["TimeZone"]</strong></label>
            <span asp-validation-for="TimeZone" class="text-danger"></span>
            <select class="form-control" 
                    asp-for="TimeZone"
                    asp-items="@Model.AvailableTimeZones"></select>
        </div>


     
    </card-body>
</card>


<input type="hidden" asp-for="Id" />
