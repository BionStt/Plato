@model Plato.Models.Users.User

<li class="list-group-item">
    
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="ckb-@Model.Id">
        <label class="custom-control-label pr-4" for="ckb-@Model.Id"></label>
    </div>
 
    <a asp-area="Plato.Users" asp-controller="Admin" asp-action="Display" asp-route-id="@Model.Id"><strong>@Model.UserName</strong></a>
    <a asp-area="Plato.Users" asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary float-right">@T["Edit"]</a>

</li>

