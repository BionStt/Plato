@inherits Plato.Internal.Layout.Razor.RazorPage<TModel>
@{
    var settings = GetOptions<SiteOptions>();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title asp-separator=" - ">@settings.SiteName</title>
    <base href="/" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <assets section="Header" />
    <scripts section="Header" />
</head>
<body>

    <assets section="Body" />
    <scripts section="Body" />
            
    <div class="nav-site">
        <div class="navbar navbar-expand-lg navbar-dark bg-dark">

            <div class="d-lg-none d-md-table d-sm-table w-100">
                <div class="w-100">
                    <a asp-route-area="Plato.Core" asp-route-controller="Home" asp-route-action="Index" class="navbar-brand d-inline-block">
                        @settings.SiteName
                    </a>
                    <div class="navbar-nav float-right">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a href="#" class="nav-link dropdown-toggle-no-caret" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="@T["Navigation"]">
                                    <i class="fal fa-bars"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link dropdown-toggle-no-caret" data-toggle="collapse" data-target="#search-collapse" aria-controls="search-collapse" aria-expanded="false" aria-label="@T["Search"]">
                                    <i class="fal fa-search"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tooltip" data-container="#adminNav" title="@T[" Return Home"]" asp-route-area="Plato.Core" asp-route-controller="Home" asp-route-action="Index" data-placement="bottom">
                                    <i class="fal fa-home"></i>
                                </a>
                            </li>
                            @if (this.CurrentUser != null)
                            {
                                <li class="nav-item dropdown">
                                    <form asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="LogOff" method="post">
                                        <a class="nav-link" href="#" data-toggle="dropdown" data-display="static">
                                            <avatar class="avatar avatar-sm" url="@this.CurrentUser.Avatar.Url"/>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right anim anim-2x anim-scale-in">
                                            <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditProfile">@T["Profile"]</a>
                                            <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditAccount">@T["Account"]</a>
                                            <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSignature">@T["Signature"]</a>
                                            <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSettings">@T["Settings"]</a>
                                            <div class="dropdown-divider"></div>
                                            <button type="submit" class="btn dropdown-item">@T["Log off"]</button>
                                        </div>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
             
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse" role="navigation">
                <div class="d-table w-100">
                    <div class="float-left col-1 d-lg-inline d-md-none d-sm-none">
                        <a asp-route-area="Plato.Core" asp-route-controller="Home" asp-route-action="Index" class="navbar-brand">
                            @settings.SiteName
                        </a>
                    </div>
                    <div class="float-left col-6 d-lg-inline d-md-none d-sm-none">
                        <navigation name="site-search"
                                    class="nav nav-search" />
                    </div>
                    <div class="navbar-nav">

                            <navigation name="site"
                                        class="nav nav-pills"
                                        child-ul-css-class="dropdown-menu dropdown-menu-right anim anim-2x anim-scale-in"/>

                            @if (this.CurrentUser != null)
                            {
                                <form asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="LogOff" method="post" class="form-inline d-lg-inline d-md-none d-sm-none">
                                    <ul class="nav nav-pills">
                                        <li class="nav-item dropdown account">
                                            <a href="#" class="nav-link dropdown-toggle dropdown-toggle-no-caret" id="accountDropDown" data-toggle="dropdown" data-provide="tooltip" title="@this.CurrentUser.DisplayName">
                                                <avatar class="avatar avatar-sm" url="@this.CurrentUser.Avatar.Url"/>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right anim anim-2x anim-scale-in" aria-labelledby="accountDropDown">
                                                <div class="p-3">
                                                    <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-opts.id="@this.CurrentUser.Id" asp-route-opts.alias="@this.CurrentUser.Alias" class="btn btn-sm btn-primary float-right">@T["Profile"]</a>
                                                    <avatar data-toggle="tooltip" title="@this.CurrentUser.DisplayName" class="avatar mr-2" url="@this.CurrentUser.Avatar.Url"/>
                                                    <h6 class="d-inline-block align-middle">@this.CurrentUser.DisplayName</h6>
                                                </div>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditProfile">@T["Profile"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditAccount">@T["Account"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSignature">@T["Signature"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSettings">@T["Settings"]</a>
                                                <authorize asp-permission="AdminAccess">
                                                    <authorize-success>
                                                        <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item" asp-route-area="Plato.Admin" asp-route-controller="Admin" asp-route-action="Index">@T["Dashboard"]</a>
                                                    </authorize-success>
                                                </authorize>
                                                <div class="dropdown-divider"></div>
                                                <button type="submit" class="btn dropdown-item">@T["Log off"]</button>
                                            </div>
                                        </li>

                                    </ul>
                                </form>
                            }
                            else
                            {
                                <ul class="nav nav-pills">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Login" asp-route-returnUrl="@Context.Request.Path">@T["Login"]</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Register" asp-route-returnUrl="@Context.Request.Path">@T["Register"]</a>
                                    </li>
                                </ul>
                            }

                     

                    </div>
                </div>
            </div>
            <div class="collapse w-100" id="search-collapse">
                <navigation name="site-search"
                            class="nav nav-search" />
            </div>
        </div>
    </div>
    
    <div class="nav nav-tabs">
        <div class="container-fluid">
            <div class="navbar d-block px-4" role="navigation">
                <div class="row no-gutters">
                    <div class="col-1">
                        <a asp-route-area="Plato.Core" asp-route-controller="Home" asp-route-action="Index" class="navbar-brand">
                            @settings.SiteName
                        </a>
                    </div>
                    <div class="col-6">
                        <navigation name="site-search"
                                    class="nav nav-search" />
                    </div>
                    <div class="col-5">
                        <div class="float-right site-nav">

                            @if (this.CurrentUser != null)
                            {
                                <form asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="LogOff" method="post" class="float-right">
                                    <ul class="nav nav-pills">
                                        <li class="nav-item dropdown account">
                                            <a href="#" class="nav-link dropdown-toggle dropdown-toggle-no-caret" id="accountDropDown" data-toggle="dropdown" data-provide="tooltip" title="@this.CurrentUser.DisplayName">
                                                <avatar class="avatar avatar-sm" url="@this.CurrentUser.Avatar.Url" />
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right anim anim-2x anim-scale-in" aria-labelledby="accountDropDown">
                                                <div class="p-3">
                                                    <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="Display" asp-route-opts.id="@this.CurrentUser.Id" asp-route-opts.alias="@this.CurrentUser.Alias" class="btn btn-sm btn-primary float-right">@T["Profile"]</a>
                                                    <avatar data-toggle="tooltip" title="@this.CurrentUser.DisplayName" class="avatar mr-2" url="@this.CurrentUser.Avatar.Url" />
                                                    <h6 class="d-inline-block align-middle">@this.CurrentUser.DisplayName</h6>
                                                </div>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditProfile">@T["Profile"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditAccount">@T["Account"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSignature">@T["Signature"]</a>
                                                <a class="dropdown-item" asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="EditSettings">@T["Settings"]</a>
                                                <authorize asp-permission="AdminAccess">
                                                    <authorize-success>
                                                        <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item" asp-route-area="Plato.Admin" asp-route-controller="Admin" asp-route-action="Index">@T["Dashboard"]</a>
                                                    </authorize-success>
                                                </authorize>
                                                <div class="dropdown-divider"></div>
                                                <button type="submit" class="btn dropdown-item">@T["Log off"]</button>
                                            </div>
                                        </li>

                                    </ul>
                                </form>
                            }
                            else
                            {
                                <ul class="nav nav-pills float-right">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Login" asp-route-returnUrl="@Context.Request.Path">@T["Login"]</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Register" asp-route-returnUrl="@Context.Request.Path">@T["Register"]</a>
                                    </li>
                                </ul>
                            }
                            


                            <navigation name="site"
                                        class="nav nav-pills float-left"
                                        child-ul-css-class="dropdown-menu dropdown-menu-right anim anim-2x anim-scale-in" />
                            


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class=" p-4">
            <nav aria-label="breadcrumb">
                <breadcrumb class="breadcrumb p-0 bg-transparent col-12" />
            </nav>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @System.DateTime.Now.Year - Plato</p>
            </footer>
        </div>
    </div>

    <assets section="Footer" />
    <scripts section="Footer" />

</body>
</html>
