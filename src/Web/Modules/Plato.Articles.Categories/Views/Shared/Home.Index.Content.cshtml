@model CategoryIndexViewModel

@await DisplayAsync(new View("ArticleCategoryList", new
{
    options = @Model.Options
}))

@if (Model.Options.CategoryId != 0)
{
    @await DisplayAsync(new View("ArticleList", new
    {
        model = new EntityIndexViewModel<Article>()
        {
            Options = Model.EntityIndexOptions,
            Pager = Model.Pager
        }       
    }))
}

