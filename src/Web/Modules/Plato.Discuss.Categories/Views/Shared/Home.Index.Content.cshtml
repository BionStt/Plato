@model CategoryIndexViewModel

@await DisplayAsync(new View("DiscussCategoryList", new
{
    options = @Model.Options
}))

@if (Model.Options.CategoryId != 0)
{
    @await DisplayAsync(new View("TopicList", new
    {
        model = new EntityIndexViewModel<Topic>()
        {
            Options = Model.EntityIndexOptions,
            Pager = Model.Pager
        }
    }))
}

