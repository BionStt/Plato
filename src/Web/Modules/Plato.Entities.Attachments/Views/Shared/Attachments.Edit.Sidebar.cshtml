@model EditEntityAttachmentsViewModel


<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Attachments"]</h6>
    </card-title>
    <card-body>

        <div class="attachments" data-provide="attachments">

            <div class="list-group list-group-flush list-group-hover">
                <a class="list-group-item list-group-item-action" asp-route-area="Plato.Discuss.Labels" asp-route-controller="Home" asp-route-action="Display">
                    <span class="fiv-sqo fiv-icon-zip align-middle"></span>
                    <span class="font-weight-bold">
                        AnExampleOfAReallyLongFileName.zip
                    </span>
                    <span class="text-muted">
                        123.3kb
                    </span>
                </a>
                <a class="list-group-item list-group-item-action" asp-route-area="Plato.Discuss.Labels" asp-route-controller="Home" asp-route-action="Display">
                    <span class="fiv-sqo fiv-icon-pdf align-middle"></span>
                    <span class="font-weight-bold">
                        Example.pdf
                    </span>
                    <span class="text-muted">
                        123mb
                    </span>
                </a>
                <div class="list-group-item">

                    <div class="fallback">
                        <input name="file" type="file" multiple />
                    </div>
                </div>
            </div>

        </div>

</card-body>
</card>

