@model CategoryIndexViewModel

@await DisplayAsync(new View("IdeaCategoryList", new
{
    options = @Model.Options
}))

@if (Model.Options.CategoryId != 0)
{
    @await DisplayAsync(new View("IdeaList", new
    {
        model = new EntityIndexViewModel<Idea>()
        {
            Options = Model.EntityIndexOptions,
            Pager = Model.Pager
        }     
    }))
}

