@model SiteSettingsViewModel
<card>
    <card-title>
        <h6 class="card-title">@T["Settings"]</h6>
    </card-title>
    <card-body>
        <fieldset>
            <div class="form-group" asp-validation-class-for="SiteName">
                <label asp-for="SiteName">
                    <strong>@T["Site Name"]</strong>
                    <span asp-validation-for="SiteName" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["Your site name is shown at the top of pages, within page titles and within emails generated by Plato."]</span>
                </label>
                <input asp-for="SiteName" class="form-control" autofocus />
            </div>

            <div class="form-group" asp-validation-class-for="Theme">
                <label asp-for="Theme">
                    <strong>@T["Theme"]</strong>
                    <span asp-validation-for="Theme" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["The default theme for Plato."]</span>
                </label>
                <select class="form-control"
                        asp-for="Theme"
                        asp-items="@Model.AvailableThemes"></select>
            </div>
            <div class="form-group" asp-validation-class-for="HomePageRoute">
                <label asp-for="Theme">
                    <strong>@T["Default Page"]</strong>
                    <span asp-validation-for="HomeRoute" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["The default page for Plato when loaded with no alias or path information, i.e. https://plato.company.com/"]</span>
                </label>
                <select class="form-control"
                        asp-for="HomeRoute"
                        asp-items="@Model.AvailableHomeRoutes"></select>
            </div>
            
            <div class="form-group" asp-validation-class-for="SiteName">
                <label asp-for="HomeAlias">
                    <strong>@T["Default Alias"]</strong>
                    <span asp-validation-for="HomeAlias" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["If Plato.Core is not your default page provide an alias for Plato.Core. For example home, support, community"]</span>
                </label>
                <input asp-for="HomeAlias" class="form-control" />
            </div>

            <div class="form-group" asp-validation-class-for="TimeZone">
                <label asp-for="TimeZone">
                    <strong>@T["Time Zone"]</strong>
                    <span asp-validation-for="TimeZone" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["Specify the time zone for the web server(s) hosting your Plato installation."]</span>
                </label>
                <select class="form-control"
                        asp-for="TimeZone"
                        asp-items="@Model.AvailableTimeZones"></select>
            </div>
            <div class="form-group" asp-validation-class-for="TimeZone">
                <label asp-for="DateTimeFormat">
                    <strong>@T["Date Format"]</strong>
                    <span asp-validation-for="DateTimeFormat" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["Customize the default format to display dates within Plato."]</span>
                </label>
                <select class="form-control"
                        asp-for="DateTimeFormat"
                        asp-items="@Model.AvailableDateTimeFormat"></select>
            </div>

            <div class="form-group" asp-validation-class-for="TimeZone">
                <label asp-for="DateTimeFormat">
                    <strong>@T["Language"]</strong>
                    <span asp-validation-for="DateTimeFormat" class="text-danger"></span>
                    <br />
                    <span class="text-muted">@T["Customize the default language for Plato."]</span>
                </label>
                <select class="form-control"
                        asp-for="Culture"
                        asp-items="@Model.AvailableCultures"></select>
            </div>

        </fieldset>
    </card-body>
</card>
