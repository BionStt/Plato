@model SetUpViewModel
@{
    AddTitleSegment(T["Set Up"]);    
    Layout = "_GetStartedLayout.cshtml";
}

<form asp-action="SetUp" method="post" enctype="multipart/form-data" data-disable-submit="true" role="form">
    <section class="flex-column flex-lg-row no-gutters d-flex">
        <div class="col-12 align-self-start align-self-lg-center text-center">
            <div class="my-6 mx-auto max-w-800">

                <div>
                    <span class="plato-brand align-middle mr-2"></span><h2 class="d-inline-block align-middle text-primary">Plato</h2>
                </div>

                <div class="my-4">

                    <h1 class="display-4 text-primary font-weight-bold">
                        Your nearly there
                    </h1>

                    <h3 class="font-weight-light my-4">
                        We just need your company name 
                    </h3>
                    <div class="mt-4">

                        <div class="mt-2 w-100 max-w-500 d-inline-block">

                            <fieldset>
                                <div class="form-group text-left">                                    
                                    <input asp-for="CompanyName" class="form-control form-control-lg" placeholder="@T["company name"]" autofocus />
                                    <div class="mt-2" asp-validation-summary="All"></div>
                                </div>
                            </fieldset>                      
                            <div class="form-group">
                                <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Confirm"]</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
</form>

@section Scripts {
    <script src="/plato.site/content/js/signup/signup.min.js"></script>
}
