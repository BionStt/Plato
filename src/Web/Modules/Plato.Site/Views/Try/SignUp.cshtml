@model SignUpViewModel
@{
    AddTitleSegment(T["Sign Up"]);    
    Layout = "_GetStartedLayout.cshtml";
}
    
<div class="card">
    <div class="card-body">
        <form asp-action="SignUp" method="post" enctype="multipart/form-data" data-disable-submit="true" role="form">
            <div class="my-4">
                <span class="plato-brand align-middle mr-3"></span><h2 class="d-inline-block m-0 align-middle text-primary">Plato</h2>
            </div>       
            <h1 class="display-4 text-primary font-weight-bold">
                @T["First, enter your email"]
            </h1>
            <h3 class="font-weight-light my-4">
                @T["One more email - a quick confirmation - then say hello to your very own product support site"]
            </h3>
            <div class="mt-4">
                <div class="mt-2 w-100 max-w-500 d-inline-block">
                    <fieldset>
                        <div class="form-group text-left">
                            <input asp-for="Email" class="form-control form-control-lg text-center" placeholder="@T["name@work-email.com"]" autofocus />
                            <div class="mt-2" asp-validation-summary="All"></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailUpdates">
                                <span class="switch switch-round mr-2">
                                    <input data-toggle="collapse" class="form-check-input" asp-for="EmailUpdates" />
                                    <span class="switch-slider"></span>
                                </span>
                                @T["It's OK to send me emails about Plato"] <i class="fal fa-info-circle" data-toggle="tooltip" title="@T["Only enable if you are logging in from a secure device only you have acces to"]"></i>
                            </label>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Confirm"]</button>
                    </div>
                </div>
            </div>                
        </form>
    </div>
</div>