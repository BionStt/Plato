@using PlatoCore.Models.Extensions
@model TenantIndexViewModel
@{
    var platoOpts = GetOptions<PlatoOptions>();
    var isDemo = platoOpts?.DemoMode ?? false;    
}

<card class="card card-body-flush">
    <card-title>
        <h6 class="card-title">@T["Tenants"]</h6>
    </card-title>
    <card-body>
        @if (Model.Results != null)
        {
            <ul class="list-group list-group-flush list-group-hover">
                @foreach (var tenant in Model.Results)
                {
                    var url = tenant.GetRequestedUrl();
                    <li class="list-group-item list-group-item-action">
                        <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@tenant.Name" class="btn btn-secondary float-right">
                            <i class="fal fa-pencil mr-1"></i>@T["Edit"]
                        </a>
                        <h6>
                            <a asp-route-controller="Admin" asp-route-action="Edit" asp-route-id="@tenant.Name" class="font-weight-bold">
                                @tenant.Name
                            </a>
                        </h6>
                        <ul class="list-inline">
                            @if (!string.IsNullOrEmpty(url))
                            {
                                <li class="list-inline-item">
                                    <a href="@url" data-toggle="tooltip" title="@url" target="_blank" class="mr-1">@T["Open"]</a>
                                </li>
                            }
                            <li class="list-inline-item">
                                @if (tenant.State == TenantState.Running)
                                {
                                    <span class="text-success">@T[tenant.State.ToString()]</span>
                                }
                                else
                                {
                                    <span class="text-danger">@T[tenant.State.ToString()]</span>
                                }
                            </li>
                            @if (!string.IsNullOrEmpty(tenant.OwnerId))
                            {
                                <li class="list-inline-item">
                                    <span title="@T["Owner"]" data-toggle="tooltip">@tenant.OwnerId</span>
                                </li>
                            }
                            @if (tenant.CreatedDate != null)
                            {
                                <li class="list-inline-item">
                                    <span title="@T["Created"] @tenant.CreatedDate" data-toggle="tooltip">
                                        <date utc="@tenant.CreatedDate" />
                                    </span>
                                </li>
                            }
                            @if (tenant.ModifiedDate != null)
                            {
                                <li class="list-inline-item">
                                     <span title="@T["Modified"] @tenant.ModifiedDate" data-toggle="tooltip">
                                        <date utc="@tenant.ModifiedDate" />
                                    </span>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        }
        else
        {
            <ul class="list-group list-group-flush list-group-hover">
                <li class="list-group-item">
                    <h6>@T["No tenants found"]</h6>
                </li>
            </ul>
        }
    </card-body>
</card>
