@model LoginViewModel

<form asp-route-area="Plato.Users" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="col-form-label font-weight-bold">@T["Username"]</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" autocomplete="off" value="@Model.UserName" placeholder="@T["Username"]" class="form-control" autofocus />
    </div>
    <div class="form-group">
        <label class="col-form-label font-weight-bold">@T["Password"]</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" autocomplete="off" class="form-control" placeholder="@T["Password"]" />
    </div>
    <div class="form-group form-check">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @T["Remember me on this device"]
        </label>
    </div>
    <div class="form-group">
        <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Login"]</button>
    </div>
    <p>
        <a asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Create a new account"]</a> @T["or"]
        <a asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Forgot your password"]</a>
        <br /><br />
        @T["Before you can login you must first"] <a asp-route-area="Plato.Users" asp-route-controller="Account" asp-route-action="ConfirmEmail" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["confirm your email address"]</a>
    </p>
</form>
