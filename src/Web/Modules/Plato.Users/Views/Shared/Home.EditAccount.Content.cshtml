@model EditAccountViewModel

<div asp-validation-summary="All"></div>

<card>
    <card-title>
        <h6 class="card-title">@T["Account"]</h6>
    </card-title>
    <card-body>
        <div class="row">
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="UserName">
                        <label asp-for="UserName"><strong>@T["Username"]</strong></label>
                        <i class="fal fa-info-circle ml-2 align-middle" title="@T["If you change your username you will be logged out and will need to login again."]" data-toggle="tooltip"></i>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="UserName" class="form-control" autofocus />
                    </div>
                </fieldset>
            </div>
            <div class="col-6">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="Email">
                        <label for="Email"><strong>@T["Email"]</strong></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" type="text" />
                    </div>
                </fieldset>
            </div>
        </div>
    </card-body>
</card>

<card>
    <card-title>
        <h6 class="card-title">
            @T["Password"]
        </h6>
    </card-title>
    <card-body>
        <i class="fal fa-lock"></i>
        <a asp-route-area="Plato.Users" asp-route-controller="Home" asp-route-action="ResetPassword">
            @T["Send password reset link to"] @Model.Email
        </a>
    </card-body>
</card>

<input type="hidden" asp-for="Id" />
