@model LoginViewModel

<div asp-validation-summary="All"></div>
<div class="form-group">
    <label class="col-form-label font-weight-bold">@T["Username"]</label>
    <span asp-validation-for="UserName" class="text-danger"></span>
    <input asp-for="UserName" autocomplete="off" class="form-control" value="@Model.UserName" placeholder="@T["Username"]" autofocus />
</div>
<div class="form-group">
    <label class="col-form-label font-weight-bold">@T["Password"]</label>
    <span asp-validation-for="Password" class="text-danger"></span>
    <input asp-for="Password" autocomplete="off" class="form-control" placeholder="@T["Password"]" />
</div>
<input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]"/>